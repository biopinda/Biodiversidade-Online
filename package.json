{
  "name": "@biopinda/darwincorejson",
  "devDependencies": {
    "@intellectronica/ruler": "^0.3.8",
    "@types/cli-progress": "^3.11.6",
    "@types/papaparse": "^5.3.16",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "patch-package": "^8.0.0",
    "prettier": "^3.6.2"
  },
  "packageManager": "bun@1.2.21",
  "private": true,
  "scripts": {
    "ingest:occurrences": "bun run --filter @darwincore/ingest occurrences",
    "ingest:flora": "bun run --filter @darwincore/ingest flora",
    "ingest:fauna": "bun run --filter @darwincore/ingest fauna",
    "ingest:test": "bun run --filter @darwincore/ingest test",
    "web:dev": "bun run --filter @darwincore/web dev",
    "web:build": "bun run --filter @darwincore/web build",
    "web:preview": "bun run --filter @darwincore/web preview",
    "web:start": "bun run --filter @darwincore/web start",
    "ruler:apply": "npx ruler apply",
    "ruler:revert": "npx ruler revert",
    "ruler:init": "npx ruler init",
    "format": "npx prettier --write . --experimental-cli",
    "postinstall": "patch-package --patch-dir packages/web/patches && npx ruler apply",
    "prepare": "husky"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "@types/node": "^22.8.4",
      "bson": "^6.7.0",
      "cli-progress": "^3.12.0",
      "extract-zip": "^2.0.1",
      "fast-xml-parser": "^4.4.1",
      "mongodb": "^6.10.0",
      "papaparse": "^5.4.1",
      "@types/bun": "^1.1.8"
    }
  },
  "lint-staged": {
    "*": "npx prettier -w --experimental-cli"
  }
}
