{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "typeRoots": ["../../node_modules/@types"],
    "composite": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts",
    "tests/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
