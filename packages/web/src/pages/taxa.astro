---
import BaseLayout from '@/layouts/base.astro'

// Fetch total count from API for display
const countResponse = await fetch(`${Astro.url.origin}/api/taxa/count`).catch(
  () => null
)
const taxaNum = countResponse
  ? ((await countResponse.json()) as { count: number }).count
  : 0

const searchParams: Record<string, string> = Object.fromEntries(
  Array.from(Astro.url.searchParams.entries())
)

// Fetch taxa from API if there are search params
let taxa: Record<string, unknown>[] = []
let total = 0
let totalPages = 0
const currentPage = searchParams.page ? +searchParams.page : 1
const pageSize = 50

if (Object.keys(searchParams).length > 0 && searchParams.scientificName) {
  const offset = (currentPage - 1) * pageSize
  const apiUrl = new URL('/api/taxa', Astro.url.origin)
  apiUrl.searchParams.set('scientificName', searchParams.scientificName)
  apiUrl.searchParams.set('limit', pageSize.toString())
  apiUrl.searchParams.set('offset', offset.toString())

  const response = await fetch(apiUrl.toString()).catch(() => null)
  if (response) {
    const result = (await response.json()) as {
      data: Record<string, unknown>[]
      pagination: { total: number; limit: number; offset: number }
    }
    taxa = result.data
    total = result.pagination.total
    totalPages = Math.ceil(total / pageSize)
  }
}

const searchParamsWithPage = (page: number) => {
  const params = new URLSearchParams(searchParams)
  params.set('page', page.toString())
  return `?${params.toString()}`
}
---

<BaseLayout title="Procura de Taxa">
  <section class="m-2 inline-block rounded border border-slate-400 p-2">
    <h2 class="text-xl font-bold">Filtro</h2>
    <form class="inline-flex flex-col gap-1">
      <div class="row">
        <label for="scientificName">Nome Completo ou Gênero</label>
        <input
          id="scientificName"
          name="scientificName"
          type="text"
          class="rounded border border-green-800 p-1"
          value={searchParams.scientificName}
        />
      </div>
      <div class="flex items-center justify-between">
        <div>Taxa disponíveis: <b>{taxaNum}</b></div>
        <input
          class="rounded bg-green-800 p-1 px-2 text-white"
          type="submit"
          value="Filtrar"
        />
      </div>
    </form>
  </section>
  {
    taxa.length > 0 && (
      <section class="m-2">
        <div class="flex flex-row items-center gap-2 pb-2">
          <h2 class="text-xl font-bold">
            Resultados{total > 0 && <>: {total}</>}
          </h2>
          <a
            class="rounded bg-green-800 p-1 px-2 text-white hover:drop-shadow"
            href={`/api/taxa?scientificName=${searchParams.scientificName}`}
            download={`${searchParams.scientificName}.json`}
          >
            <li class="las la-save" />
            Baixar em JSON
          </a>
          <div class="grow" />
          {totalPages > 1 && (
            <>
              <div class="text-sm italic">
                Página {currentPage} / {totalPages}
              </div>

              <div class="flex flex-row gap-1">
                {currentPage > 1 && (
                  <a
                    class="rounded bg-green-800 p-1 px-2 text-white"
                    href={searchParamsWithPage(currentPage - 1)}
                  >
                    Anterior
                  </a>
                )}
                {currentPage < totalPages && (
                  <a
                    class="rounded bg-green-800 p-1 px-2 text-white"
                    href={searchParamsWithPage(currentPage + 1)}
                  >
                    Próxima
                  </a>
                )}
              </div>
            </>
          )}
        </div>
        <ul class="grid grid-cols-2 gap-2">
          {taxa.map((taxon) => {
            const pageId = `${(taxon.kingdom as string)[0]?.toUpperCase()}${
              taxon.taxonID
            }`
            return (
              <li class="rounded border border-slate-400 p-1">
                <a
                  class="text-green-800"
                  href={`/taxon/${(taxon.kingdom as string)[0]?.toUpperCase()}${
                    taxon.taxonID
                  }`}
                  transition:name={`hero-${pageId}`}
                >
                  {taxon.scientificName}
                </a>
                <a class="text-blue-600" href={`/taxon/${pageId}.json`}>
                  (json)
                </a>
              </li>
            )
          })}
        </ul>
      </section>
    )
  }
</BaseLayout>
